<% unless @shoes.empty? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Distance</th>
          <th scope="col">Retired</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @shoes.each do |shoe| %>
        <tr>
          <th scope="col"><%= shoe.name %></th>
          <th scope="col"><%= shoe.distance_in_miles %> miles</th>
          <th scope="col"><%= shoe.retired? %></th>
          <th scope="col">
            <div class="btn-group">
              <%= link_to "Edit", edit_shoe_path(shoe), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% else %>
    <p><%= link_to "Add some shoes", new_shoe_path %></p>
<% end %>