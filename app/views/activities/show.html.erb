<h2>Activity</h2>

<p>
  <strong>Date:</strong>
  <%= @activity.date %>
</p>

<p>
  <strong>Category:</strong>
  <%= @activity.category %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @activity.difficulty %>
</p>

<p>
  <strong>Unit:</strong>
  <%= @activity.unit %>
</p>

<p>
  <strong>Duration:</strong>
  <%= format_duration(@activity.duration) if @activity.duration.present? %>
</p>

<p>
  <strong>Pace:</strong>
  <%= format_duration(@activity.calculated_pace) if @activity.calculated_pace.present? %>
</p>

<p>
  <strong>Distance:</strong>
  <%= @activity.distance %>
</p>